<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    tools:context=".view.NavBar">

    <FrameLayout
        android:id="@+id/nav_frame_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/nav_bar_layout"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nav_frame_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/logistics"
        android:title="Logistics"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/baseline_logistics_24"
        app:layout_constraintTop_toTopOf="@id/nav_bar_layout"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/travelCommunity"
        android:background="@drawable/baseline_community_24"
        android:title="Travel Community"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/nav_bar_layout"
        tools:layout_editor_absoluteX="74dp" />

    <Button
        android:id="@+id/accommodations"
        android:background="@drawable/baseline_house_24"
        android:title="Accommodations"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/nav_bar_layout"
        tools:layout_editor_absoluteX="131dp" />

    <Button
        android:id="@+id/dining"
        android:background="@drawable/baseline_fastfood_24"
        android:title="Dining"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/nav_bar_layout"
        tools:layout_editor_absoluteX="409dp" />

    <Button
        android:id="@+id/destination"
        android:background="@drawable/baseline_location_on_24"
        android:title="Destination"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/nav_bar_layout"
        tools:layout_editor_absoluteX="349dp" />

    


</androidx.constraintlayout.widget.ConstraintLayout>